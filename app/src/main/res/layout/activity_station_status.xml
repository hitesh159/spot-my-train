<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/stationstatus"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eff2f0"
    tools:context="com.example.hitesh.spotmytrain.StationStatus">

    <AutoCompleteTextView
        android:id="@+id/station_name"
        android:layout_width="335dp"
        android:layout_height="43dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:background="#fff"
        android:dropDownHeight="wrap_content"
        android:hint="enter station name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/search_station"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="148dp"
        android:layout_marginTop="12dp"
        android:background="@color/splash"
        android:text="search"
        android:textColor="#fff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/station_name" />
</android.support.constraint.ConstraintLayout>
